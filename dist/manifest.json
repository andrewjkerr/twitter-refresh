{
	"manifest_version": 2,
	"name": "Twitter AutoRefresh",
	"version": "2.0.1",
	"description": "Adds option to refresh your timeline if there is a new tweet.",
	"icons": {"128": "icons/icon.png" },
	"author": "Andrew Kerr",
	"content_scripts": [
		{
			"matches": ["*://www.twitter.com/",
					    		"*://twitter.com/"],
			"js": ["twitter-autorefresh.js"]
		}
	],
  "background": {
    "scripts": ["bootstrap.js"],
    "persistent": false
  },
	"short_name": "twitrefresh",
  "permissions": [
    "tabs",
    "storage",
    "*://twitter.com/",
    "*://www.twitter.com/"
  ],
	"page_action": {
    "default_icon": {
        "19": "icons/icon19.png",
        "38": "icons/icon38.png"
    }
	}
}